<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">
    <FrameLayout
            android:id="@+id/frameLayoutNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/navButtomHomeLay"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navButtomHomeLay"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow"/>

        <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemIconTint="@drawable/nav_item_selector"
                app:itemTextColor="@drawable/nav_item_selector"
                app:itemBackground="@android:color/white"
                app:menu="@menu/buttom_navigation_menu"
        />
    </LinearLayout>

</RelativeLayout>